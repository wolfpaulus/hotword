<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wolfpaulus.android.hotword">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/hotword"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/hotword"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.wolfpaulus.android.hotword.ListeningActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.wolfpaulus.android.hotword.MainActivity"></activity>
    </application>

</manifest>